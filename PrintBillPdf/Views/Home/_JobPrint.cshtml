@model  IQueryable<PrintBillPdf.Models.Order>
<div class="panel-body">
    <table class="table table-striped table-responsive">
        <tbody>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Total</th>
            </tr>
            @{ var totalBill = 0; }
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Quantity</td>
                    <td>@item.Price</td>
                    <td>@item.Amount</td>
                </tr>
                totalBill = totalBill + @Convert.ToInt32(item.Amount);

            }
        </tbody>
    </table>
    <span class="pull-right" style="margin-right:100px;"><strong>Total Bill :  </strong> @totalBill</span>
</div>